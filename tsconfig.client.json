{
  "extends": "./tsconfig.json",
  "include": ["./src/client/**/*"],
  "exclude": ["./src/server/**/*", "node_modules"],
  "compilerOptions": {
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES5"
  }
}
