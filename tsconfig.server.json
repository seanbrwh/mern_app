{
  "extends": "./tsconfig.json",
  "include": ["./src/server/**/*"],
  "exclude": ["./src/client/**/*", "./node_modules"],
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/server",
    "noEmit": false,
    "module": "commonjs",
    "target": "ES6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  }
}
